{
    "compilerOptions": {
    "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
        "@shared/*": ["libs/shared/*"]
    }
},
    "include": ["apps", "libs"]
}